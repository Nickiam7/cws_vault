<main>
<div class="container">
  <h1>Hello from wines</h1>
  <div>
    <%= link_to('New wine', new_product_path) if vadmin? %>
  </div>
  <% if @wines.any? %>
    <% @wines.each do |wine|  %>
      <div>
        <%= link_to(wine.name, wine_path(wine)) %>
      </div>
    <% end %>
  <% else %>
    <h2>All our great wines will be listed soon!</h2>
  <% end %>
</div>
</main>
