
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= link_to('edit', edit_wine_path(@wine)) %>
      <%= image_tag(@wine.image.url) %>
    </div>
    <div class="col-md-6">
      <h1><%= @wine.name %></h1>
      <%= form_tag(checkout_purchase_path, method: :post, remote: true) do %>
        <%= text_field_tag :purchase_qty %>
        <%= text_field_tag :pickup %>
        <%= hidden_field_tag 'id', @wine.id %>
        <%= submit_tag "Buy now" %>
      <% end %>
      <%= formatted_amount(@wine.price) || '$0.00'%>
      <%= @wine.description %>
    </div>
  </div>
</div>
